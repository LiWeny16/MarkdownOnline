{
  "compilerOptions": {
    // TypeScript 默认会把代码编译为 ECMAScript 3
    // esnext 表示仅仅校验转换 TypeScript 类型，不进行语法编译
    "module": "esnext",
    "target": "ES2020",
    "skipLibCheck": true,
    "baseUrl": "./",
    // 开启严格模式，这使得对“this”的数据属性进行更严格的推断成为可能
    "strict": true,
    "declaration": true,
    // "emitDeclarationOnly": true,
    // "declarationDir": "allTypes",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "paths": {
      "@Asset": ["./source/assets"],
      "@Asset/*": ["./source/assets/*"],
      "@App": ["./source/js/functions/App/"],
      "@App/*": ["./source/js/functions/App/*"],
      "@Func": ["./source/js/functions"],
      "@Func/*": ["./source/js/functions/*"],
      "@Root": ["./source/"],
      "@Root/*": ["./source/*"],
      "@Com": ["./source/js/React/Components"],
      "@Com/*": ["./source/js/React/Components/*"],
      "@Mobx":["source/js/React/Mobx"],
      "@Mobx/*":["source/js/React/Mobx/*"],
    }
    // "outDir": "./"
  },

  // 配置需要校验的文件
  "include": [
    "src/**/*.ts",
    "source/js/types/*.d.ts",
    "source",
    "source/functions/*.ts"

    // "allTypes/*.d.ts",
  ],

  // 排除不需要 TypeScript 校验的文件
  "exclude": ["node_modules", "docs"]
}
